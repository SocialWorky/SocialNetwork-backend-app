    "@nestjs/platform-express": "^10.4.1",
    "@nestjs/serve-static": "^4.0.2",
    "@nestjs/swagger": "^7.4.0",
    "@nestjs/typeorm": "^10.0.2",
    "@types/axios": "^0.14.0",
    "axios": "^1.7.7",
    "bcrypt": "^5.1.1",
    "cheerio": "^1.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "google-auth-library": "^9.14.1",
    "handlebars": "^4.7.8",
    "jsonwebtoken": "^9.0.2",
    "mysql2": "^3.11.2",
    "nodemailer": "^6.9.15",
    "pg": "^8.12.0",
